<div class="row">
<div class="form-group col-md-12">
  <label for="form_password"><?=$lang['password']?><span class="require">*</span></label>
   <input class="form-control" type="password" placeholder="<?=$lang['password']?>" id="password" name="password" required>
        </div>
        </div>
        <div class="row">
        <div class="input-group">
       <input type="checkbox" style="margin-left:12px" onclick="myFunction()"> Show Password
     </div>
</div>
<script>
function myFunction() {
  var x = document.getElementById("password");
  if (x.type === "password") {
    x.type = "text";
  } else {
    x.type = "password";
  }
}
</script>  
